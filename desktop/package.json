    "i18next": "^24.2.2",
    "jotai": "^2.12.1",
    "lucide-react": "^0.476.0",
    "react-i18next": "^15.4.1",
    "react-responsive": "^10.0.0",
    "react-simple-keyboard": "^3.8.49",
    "serialport": "^13.0.0",
    "tailwindcss": "^4.0.6",
    "vaul": "^1.1.2"
  },
